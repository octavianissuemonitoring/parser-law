# ============================================================================
# EditorConfig - Consistent Coding Styles Across Editors
# ============================================================================
# 
# This file ensures consistent formatting across different editors and IDEs
# (VS Code, PyCharm, Sublime Text, etc.)
# 
# Supported by: https://editorconfig.org/
# 
# ============================================================================

root = true

# ----------------------------------------------------------------------------
# Default settings for all files
# ----------------------------------------------------------------------------
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space

# ----------------------------------------------------------------------------
# Python files
# ----------------------------------------------------------------------------
[*.py]
indent_size = 4
max_line_length = 100

# ----------------------------------------------------------------------------
# YAML files (Docker Compose, GitHub Actions, etc.)
# ----------------------------------------------------------------------------
[*.{yml,yaml}]
indent_size = 2

# ----------------------------------------------------------------------------
# JSON files
# ----------------------------------------------------------------------------
[*.json]
indent_size = 2

# ----------------------------------------------------------------------------
# Markdown files
# ----------------------------------------------------------------------------
[*.md]
trim_trailing_whitespace = false  # Preserve double-space line breaks
max_line_length = off

# ----------------------------------------------------------------------------
# Shell scripts
# ----------------------------------------------------------------------------
[*.{sh,bash}]
indent_size = 2
end_of_line = lf

# ----------------------------------------------------------------------------
# PowerShell scripts
# ----------------------------------------------------------------------------
[*.ps1]
indent_size = 4
end_of_line = crlf

# ----------------------------------------------------------------------------
# HTML/CSS/JavaScript
# ----------------------------------------------------------------------------
[*.{html,css,js,jsx,ts,tsx}]
indent_size = 2

# ----------------------------------------------------------------------------
# SQL files
# ----------------------------------------------------------------------------
[*.sql]
indent_size = 4

# ----------------------------------------------------------------------------
# Configuration files
# ----------------------------------------------------------------------------
[*.{ini,cfg,conf,toml}]
indent_size = 4

# ----------------------------------------------------------------------------
# Makefiles (must use tabs)
# ----------------------------------------------------------------------------
[Makefile]
indent_style = tab

# ----------------------------------------------------------------------------
# .env files
# ----------------------------------------------------------------------------
[.env*]
insert_final_newline = false

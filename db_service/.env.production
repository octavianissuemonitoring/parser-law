# Environment file pentru deployment production
# Copiază acest fișier ca .env și editează valorile

# Database Configuration
DATABASE_URL=postgresql://legislatie_user:CHANGE_THIS_PASSWORD@postgres:5432/monitoring_platform
DB_PASSWORD=CHANGE_THIS_PASSWORD
DB_SCHEMA=legislatie

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false

# Security
SECRET_KEY=GENERATE_A_RANDOM_SECRET_KEY_HERE

# Logging
LOG_LEVEL=INFO

# CORS (dacă ai frontend separat)
CORS_ORIGINS=["https://your-domain.com"]

# Import Settings
IMPORT_BATCH_SIZE=100

# Pentru a genera un secret key puternic:
# python -c "import secrets; print(secrets.token_urlsafe(32))"
